generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blocks {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  block_number    BigInt
  name            String
  hash            String
  time            DateTime
  total           BigInt
  fees            BigInt
  size            BigInt
  n_tx            BigInt
}
